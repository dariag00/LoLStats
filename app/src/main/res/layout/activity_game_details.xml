<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/media_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="#9fc2fc">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">
                    <TextView
                        android:id="@+id/tv_blue_team"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="VICTORY"/>

                    <TextView
                        android:id="@+id/tv_kills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32"
                        android:textColor="@android:color/black"
                        android:layout_toRightOf="@id/tv_blue_team"
                        android:layout_marginLeft="20dp"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/slash1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/slash"
                        android:layout_toRightOf="@id/tv_kills"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_deaths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/slash1"
                        android:text="15"
                        android:textColor="#cc1818"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/slash2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_deaths"
                        android:text="@string/slash"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_assists"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/slash2"
                        android:text="57"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                    <ImageView
                        android:id="@+id/iv_kills_blue"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_assists"
                        android:src="@drawable/mask_icon_offense_100"/>

                    <ImageView
                        android:id="@+id/iv_gold_blue"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/iv_kills_blue"
                        android:src="@drawable/mask_icon_gold_100"/>

                    <TextView
                        android:id="@+id/tv_gold_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/iv_gold_blue"
                        android:text="63500"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/iv_towers_blue"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@id/tv_towers_blue"
                        android:src="@drawable/tower_100"/>

                    <TextView
                        android:id="@+id/tv_towers_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/iv_dragons_blue"
                        android:text="11"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/iv_dragons_blue"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@id/tv_dragons_blue"
                        android:src="@drawable/dragon_100"/>

                    <TextView
                        android:id="@+id/tv_dragons_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/iv_barons_blue"
                        android:text="3"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/iv_barons_blue"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@id/tv_barons_blue"
                        android:src="@drawable/baron_100"/>

                    <TextView
                        android:id="@+id/tv_barons_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="2"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/listview_blue_team"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="#fc9f9f">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">
                    <TextView
                        android:id="@+id/tv_red_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEFEAT"/>

                    <TextView
                        android:id="@+id/tv_kills_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32"
                        android:textColor="@android:color/black"
                        android:layout_toRightOf="@id/tv_red_team"
                        android:layout_marginLeft="20dp"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/slash1_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/slash"
                        android:layout_toRightOf="@id/tv_kills_red"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_deaths_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/slash1_red"
                        android:text="15"
                        android:textColor="#cc1818"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/slash2_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_deaths_red"
                        android:text="@string/slash"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_assists_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/slash2_red"
                        android:text="57"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                    <ImageView
                        android:id="@+id/iv_kills_red"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_assists_red"
                        android:src="@drawable/mask_icon_offense_200"/>

                    <ImageView
                        android:id="@+id/iv_gold_red"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/iv_kills_red"
                        android:src="@drawable/mask_icon_gold_200"/>

                    <TextView
                        android:id="@+id/tv_gold_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/iv_gold_red"
                        android:text="63500"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/iv_towers_red"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@id/tv_towers_red"
                        android:src="@drawable/tower_200"/>

                    <TextView
                        android:id="@+id/tv_towers_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/iv_dragons_red"
                        android:text="11"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/iv_dragons_red"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@id/tv_dragons_red"
                        android:src="@drawable/dragon_200"/>

                    <TextView
                        android:id="@+id/tv_dragons_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/iv_barons_red"
                        android:text="3"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/iv_barons_red"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3dp"
                        android:layout_toLeftOf="@id/tv_barons_red"
                        android:src="@drawable/baron_200"/>

                    <TextView
                        android:id="@+id/tv_barons_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="2"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/listview_red_team"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>