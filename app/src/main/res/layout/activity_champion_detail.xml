<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="215dp">

            <ImageView
                android:id="@+id/iv_splash_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/flash"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_profile_icon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:src="@drawable/mock_champion"
                    android:background="@drawable/external_border"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_global_kills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="2"
                            android:textColor="@android:color/white"
                            android:textSize="26sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/slash"
                            android:textColor="@android:color/white"
                            android:textSize="26sp" />
                        <TextView
                            android:id="@+id/tv_global_deaths"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="2"
                            android:textColor="@color/deathsColor"
                            android:textSize="26sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/slash"
                            android:textColor="@android:color/white"
                            android:textSize="26sp" />
                        <TextView
                            android:id="@+id/tv_global_assists"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="12"
                            android:textColor="@android:color/white"
                            android:textSize="26sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:textColor="@android:color/white"
                            android:text="@string/kda"/>

                        <TextView
                            android:id="@+id/tv_global_kda"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            android:textSize="26sp"
                            tools:text="14,5"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_wins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:textColor="@android:color/white"
                            android:text="14"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:textColor="@android:color/white"
                            android:text="-"/>
                        <TextView
                            android:id="@+id/tv_losses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:textColor="@android:color/white"
                            android:text="18"/>

                        <TextView
                            android:id="@+id/tv_win_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:textColor="@android:color/white"
                            android:text="(100%)"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_total_cs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="23sp"
                            android:textColor="@android:color/white"
                            android:text="Total Cs: 38"/>
                        <TextView
                            android:id="@id/tv_cs_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            tools:text="(8.2/min)"
                            android:textColor="@android:color/white"
                            android:textSize="23sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_summoner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Thresh"
                android:textColor="@android:color/white"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:textSize="30sp"/>
        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/media_card_view_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CHAMPION SUMMARY"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="3dp"
                                android:id="@+id/tv_total_damage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Damage: 38"/>

                            <TextView
                                android:id="@+id/tv_kill_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kill Percent: 38"/>

                            <TextView
                                android:id="@+id/tv_gold_min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gold/min: 38"/>


                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pie_chart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:layout_marginTop="3dp"
                                android:id="@+id/tv_dmg_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DMG %: 38"/>

                            <TextView
                                android:id="@+id/tv_gold_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gold Percent: 38"/>

                            <TextView
                                android:id="@+id/tv_total_gold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Gold: 38"/>

                            <com.github.mikephil.charting.charts.RadarChart
                                android:id="@+id/radar_chart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_role_1"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/top_icon" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_role_name_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:text="@string/top"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_role_played1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="50%"
                                        android:textSize="10sp"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2dp"
                                        android:background="#000000"/>

                                    <TextView
                                        android:id="@+id/tv_role_win_rate1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="75%"
                                        android:textSize="10sp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#d6d6d6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_role_2"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/jungle_icon"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_role_name_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:text="@string/jungle"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_role_played2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="50%"
                                        android:textSize="10sp"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2dp"
                                        android:background="#000000"/>

                                    <TextView
                                        android:id="@+id/tv_role_win_rate2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="75%"
                                        android:textSize="10sp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#d6d6d6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_role_3"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/mid_icon"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_role_name_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:text="@string/mid"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_role_played3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="50%"
                                        android:textSize="10sp"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2dp"
                                        android:background="#000000"/>

                                    <TextView
                                        android:id="@+id/tv_role_win_rate3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="75%"
                                        android:textSize="10sp"/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#d6d6d6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_role_4"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/bottom_icon"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_role_name_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:text="@string/bottom"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_role_played4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="50%"
                                        android:textSize="10sp"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2dp"
                                        android:background="#000000"/>

                                    <TextView
                                        android:id="@+id/tv_role_win_rate4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="75%"
                                        android:textSize="10sp"/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#d6d6d6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_role_5"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/support_icon"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_role_name_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:text="@string/support"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_role_played5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="50%"
                                        android:textSize="10sp"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2dp"
                                        android:background="#000000"/>

                                    <TextView
                                        android:id="@+id/tv_role_win_rate5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="75%"
                                        android:textSize="10sp"/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Early Game"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ahead in Cs@15:"/>

                        <TextView
                            android:id="@+id/tv_ahead_cs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            tools:text="50%"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cs Diff @10:"/>
                        <TextView
                            android:id="@+id/tv_cs_diff_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            tools:text="10"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cs Diff @15:"/>

                        <TextView
                            android:id="@+id/tv_cs_diff_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            tools:text="10"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cs Diff @20:"/>

                        <TextView
                            android:id="@+id/tv_cs_diff_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            tools:text="10"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ahead in Gold@15:"/>

                        <TextView
                            android:id="@+id/tv_ahead_gold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            tools:text="10"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gold Diff @10:"/>

                        <TextView
                            android:id="@+id/tv_gold_diff_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            tools:text="10"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gold Diff @15:"/>

                        <TextView
                            android:id="@+id/tv_gold_diff_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            tools:text="10"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gold Diff @20:"/>

                        <TextView
                            android:id="@+id/tv_gold_diff_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            tools:text="10"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal best"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:text="CS/min"/>

                        <ImageView
                            android:id="@+id/iv_best_champ1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/mock_champion"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_best_stat1"
