<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce un nombre de invocador"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_url_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="URL de la Request" />

    <Button
        android:id="@+id/bt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_riot_search_resutls_json"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haz una Busqueda"
                    android:textSize="18sp"/>

                <!--TODO: Cuadrar el texto con la linea superior y hacer diseÃ±os alternativos-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_champion_icon"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/mock_champion"
                            app:civ_border_color="#FF000000"
                            app:civ_border_width="2dp" />

                        <LinearLayout
                            android:id="@+id/ly_images_aggregator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ly_runes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_main_rune"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/circle"
                                    android:src="@drawable/main_rune" />

                                <ImageView
                                    android:id="@+id/iv_secondary_rune"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="1dp"
                                    android:background="@drawable/circle"
                                    android:src="@drawable/secondary_rune" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ly_summoner_spells"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/iv_first_summoner"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginBottom="5dp"
                                    android:src="@drawable/ignite" />

                                <ImageView
                                    android:id="@+id/iv_second_summoner"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="1dp"
                                    android:src="@drawable/flash" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ly_game_stats"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/ly_kda"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_kills"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="K/"
                                        android:textColor="@android:color/black"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:id="@+id/tv_deaths"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@android:color/holo_red_light"
                                        android:text="D"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:id="@+id/tv_assists"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="/A"
                                        android:textColor="@android:color/black"
                                        android:textSize="13sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="end"
                                        android:layout_marginRight="4dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="19/10/1997"
                                            android:textSize="6sp"/>
                                        <TextView
                                            android:id="@+id/tv_game_type"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:textSize="6sp"
                                            android:text="Ranked queue"/>

                                    </LinearLayout>

                                </LinearLayout>

                                <!-- TODO: poner en un unico Layout todo lo referente al kds -->
                                <!-- TODO: intentar simplificar el layout -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0,75:1"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ly_items"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_item1"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/item" />

                                <ImageView
                                    android:id="@+id/iv_item2"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="2dp"
                                    android:src="@drawable/item" />

                                <ImageView
                                    android:id="@+id/iv_item3"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="2dp"
                                    android:src="@drawable/item" />

                                <ImageView
                                    android:id="@+id/iv_item4"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="2dp"
                                    android:src="@drawable/item" />

                                <ImageView
                                    android:id="@+id/iv_item5"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="2dp"
                                    android:src="@drawable/item" />

                                <ImageView
                                    android:id="@+id/iv_item6"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="2dp"
                                    android:src="@drawable/item" />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



        </ScrollView>

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/error_message"
            android:textSize="22sp"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/pb_loading_indicator"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>