                               <TextView
                                   android:id="@+id/tv_role_win_rate1"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   tools:text="75%"
                                   android:textSize="10sp"/>

                           </LinearLayout>

                       </LinearLayout>

