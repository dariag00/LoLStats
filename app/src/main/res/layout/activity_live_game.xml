<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".LiveGameActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/media_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_bans_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="BANS"/>

                <ImageView
                    android:id="@+id/iv_ban1_blue"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_bans_blue"
                    android:src="@drawable/mock_champion"/>

                <ImageView
                    android:id="@+id/iv_ban2_blue"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv_ban1_blue"
                    android:src="@drawable/mock_champion"/>

                <ImageView
                    android:id="@+id/iv_ban3_blue"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv_ban2_blue"
                    android:src="@drawable/mock_champion"/>

                <ImageView
                    android:id="@+id/iv_ban4_blue"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv_ban3_blue"
                    android:src="@drawable/mock_champion"/>

                <ImageView
                    android:id="@+id/iv_ban5_blue"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv_ban4_blue"
                    android:src="@drawable/mock_champion"/>

                <TextView
                    android:id="@+id/tv_mean_win_rate_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    tools:text="45%"/>

                <TextView
                    android:id="@+id/tv_mean_division_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/tv_mean_win_rate_blue"
                    tools:text="GOLD IV"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/listview_blue_team"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/media_card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_bans_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="BANS"/>

                <ImageView
                    android:id="@+id/iv_ban1_red"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_bans_red"
                    android:src="@drawable/mock_champion"/>

                <ImageView
                    android:id="@+id/iv_ban2_red"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv_ban1_red"
                    android:src="@drawable/mock_champion"/>

                <ImageView
                    android:id="@+id/iv_ban3_red"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv_ban2_red"
                    android:src="@drawable/mock_champion"/>

                <ImageView
                    android:id="@+id/iv_ban4_red"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv_ban3_red"
                    android:src="@drawable/mock_champion"/>

                <ImageView
                    android:id="@+id/iv_ban5_red"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv_ban4_red"
                    android:src="@drawable/mock_champion"/>

                <TextView
                    android:id="@+id/tv_mean_win_rate_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    tools:text="45%"/>

                <TextView
                    android:id="@+id/tv_mean_division_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/tv_mean_win_rate_red"
                    tools:text="GOLD IV"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/listview_red_team"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>