<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
        <style name="verticalTextStyle"
            parent="android:Widget.TextView">
            <item name="android:padding">20dp</item>
            <item name="android:textSize">20sp</item>
        </style>

    <style name="MatchDetailsChampionImage">

    </style>

    <style name="match_details_champion_image">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginStart">2dp</item>
    </style>

    <style name="match_details_top_icon">
        <item name="android:layout_width">17dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="match_details_bottom_icon">
        <item name="android:layout_width">17dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="match_details_summoner_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="match_details_mmr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">6sp</item>
    </style>

    <style name="match_details_kda_detailed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="match_details_kda">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="match_details_kda_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="match_details_stats">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="match_details_stats_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="match_details_item_top">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:src">@drawable/empty_item</item>
    </style>

    <style name="match_details_item_bot">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:src">@drawable/empty_item</item>
    </style>

    <style name="match_details_item_trinket">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
    </style>

    <style name="match_details_items_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="match_details_text_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
