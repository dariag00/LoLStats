<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.klost.lolstats">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ChampionDetailsActivity"
            android:parentActivityName=".activities.SavedProfileActivity"></activity>
        <activity
            android:name=".activities.LiveGameActivity"
            android:parentActivityName=".activities.InitialActivity" />
        <activity
            android:name=".activities.SavedProfileActivity"
            android:parentActivityName=".activities.InitialActivity" />
        <activity
            android:name=".SaveSummonerActivity"
            android:parentActivityName=".activities.InitialActivity" />
        <activity
            android:name=".activities.StartActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.InitialActivity" />
        <activity
            android:name=".activities.InitialActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".TestActivity"
            android:parentActivityName=".activities.InitialActivity" />
        <activity
            android:name=".TestMainLayoutActivity"
            android:parentActivityName=".activities.InitialActivity" />
        <activity
            android:name=".GameDetailsActivity"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>